{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Profil de {{ user.username }}{% endblock %}

{% block main %}

    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                <div class="row p-2 justify-content-center">
                    <h1 class="p-3">Mon profil</h1>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Pseudo :</div>
                    <div class="col text-info">{{ user.username | capitalize }}</div>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Prénom :</div>
                    <div class="col text-info">{{ user.firstname | capitalize }}</div>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Nom :</div>
                    <div class="col text-info">{{ user.lastname | capitalize }}</div>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Téléphone :</div>
                    <div class="col text-info">{{ user.telephone }}</div>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Email :</div>
                    <div class="col text-info">{{ user.email }}</div>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Rue :</div>
                    <div class="col text-info">{{ user.street |capitalize }}</div>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Ville :</div>
                    <div class="col text-info">{{ user.city |capitalize }}</div>
                </div>
                <div class="row p-2">
                    <div class="col text-center">Code postal :</div>
                    <div class="col">{{ user.postcode |capitalize }}</div>
                </div>
                {% if(app.user) %}
                <div class="row p-2 justify-content-center">
                    <a href="{{ path('user_update') }}">
                        <button class="btn btn-info" type="button">Modifier</button>
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
